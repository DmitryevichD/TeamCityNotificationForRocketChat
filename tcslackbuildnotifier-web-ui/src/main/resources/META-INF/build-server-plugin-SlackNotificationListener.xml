<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans default-autowire="constructor">

	<bean id="rocketNotificationListener"
		class="rocketnotifications.teamcity.RocketNotificationListener"
  		init-method="register" 
  		/>

	<bean id="rocketNotificationNotificator"
		  class="rocketnotifications.teamcity.RocketNotificator"
		  init-method="register"
			/>

	<bean id="slackNotifierAdminPage" class="rocketnotifications.teamcity.extension.RocketNotifierAdminPage"/>

    <bean id="slackNotifierSettingsController" class="rocketnotifications.teamcity.extension.RocketNotifierSettingsController"/>

	<bean id="rocketNotificationProjectTabExtension"
        class="rocketnotifications.teamcity.extension.RocketNotificationProjectTabExtension"
        init-method="register" 
        />

	<bean id="rocketNotificationBuildTabExtension"
        class="rocketnotifications.teamcity.extension.RocketNotificationBuildTabExtension"
        init-method="register" 
        />
 
    <bean id="rocketNotificationIndexPageController"
     	class="rocketnotifications.teamcity.extension.RocketNotificationIndexPageController"
     	init-method="register" 
     	/>

     <bean id="rocketNotificationAjaxSettingsListPageController"
     	class="rocketnotifications.teamcity.extension.RocketNotificationAjaxSettingsListPageController"
     	init-method="register" 
     	/>

     <bean id="rocketNotificationAjaxEditPageController"
     	class="rocketnotifications.teamcity.extension.RocketNotificationAjaxEditPageController"
     	init-method="register" 
     	/>
     			
     <bean id="rocketNotificationFactory"
     	class="rocketnotifications.teamcity.RocketNotificationFactoryImpl"
     	/>
     			
     <bean id="rocketNotificationProjectSettings"
     	class="rocketnotifications.teamcity.settings.RocketNotificationProjectSettings"
     	/>

     <bean id="rocketNotificationProjectSettingsFactory"
     	class="rocketnotifications.teamcity.settings.RocketNotificationProjectSettingsFactory"
     	/>

	<bean id="rocketNotificationMainSettings"
		class="rocketnotifications.teamcity.settings.RocketNotificationMainSettings"
		init-method="register"
		/>

    <bean id="rocketNotificationMainConfig"
          class="rocketnotifications.teamcity.settings.RocketNotificationMainConfig"/>

	<bean id="rocketNotificationPayloadManager"
		class="rocketnotifications.teamcity.payload.RocketNotificationPayloadManager"
		/>

</beans>
